<Window x:Class="AdvancedHRMS.Views.PasswordResetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Reset" 
        Height="550" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource StandardWindow}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}" 
                Padding="15"
                CornerRadius="10,10,0,0">


          
            <TextBlock Text="Password Recovery" 
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>


        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" 
                Style="{StaticResource Card}"
                Width="380"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="0,20"
                CornerRadius="10">
            <StackPanel Margin="25">
                <TextBlock Text="Reset Your Password" 
                           Style="{StaticResource Heading2}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- Email -->
                <TextBlock Text="Email Address" 
                           Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="txtEmail" 
                         Style="{StaticResource FormTextBox}" 
                         Height="40"/>

                <!-- New Password -->
                <TextBlock Text="New Password" 
                           Style="{StaticResource FormLabel}"
                           Margin="0,15,0,0"/>
                <PasswordBox x:Name="txtNewPassword" 
                             Style="{StaticResource FormPasswordBox}" 
                             Height="40"/>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm New Password" 
                           Style="{StaticResource FormLabel}"
                           Margin="0,15,0,0"/>
                <PasswordBox x:Name="txtConfirmPassword" 
                             Style="{StaticResource FormPasswordBox}" 
                             Height="40"/>

                <!-- Message -->
                <TextBlock x:Name="txtMessage" 
                           Style="{StaticResource InfoMessage}"
                           Visibility="Collapsed"
                           Margin="0,10"/>

                <!-- Reset Button -->
                <Button Content="🔒 Reset Password" 
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,25,0,10"
                        Height="45"
                        FontSize="16"
                        FontWeight="Bold"
                        Click="BtnResetPassword_Click"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{StaticResource DarkBrush}" 
                Padding="10"
                CornerRadius="0,0,10,10">
            <TextBlock Text="© 2025 Advanced HRMS | Account Security"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       FontSize="12"/>

         
        </Border>
    </Grid>
</Window>
