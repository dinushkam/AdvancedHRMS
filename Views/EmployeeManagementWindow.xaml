<Window x:Class="AdvancedHRMS.Views.EmployeeManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Management" Height="500" Width="1100"
        WindowStartupLocation="CenterScreen" Background="#F8F9FA">

    <Grid>
        <Border Background="White" CornerRadius="12" Margin="20" Padding="15" 
                Effect="{DynamicResource ShadowEffect}">

            <Grid>
                <!-- Title -->
                <TextBlock Text="Employee Management" FontSize="22" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- DataGrid Styling -->
                <DataGrid Name="EmployeeDataGrid" AutoGenerateColumns="True" Margin="10,50,10,80"
                          Background="White" BorderThickness="1" BorderBrush="#ddd"
                          ColumnWidth="*"
                          RowBackground="White" AlternatingRowBackground="#F2F2F2"
                          GridLinesVisibility="None">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>

                <!-- Button Panel -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">

                    <Button Content="Add Employee" Width="140" Height="40" Margin="10" 
                            Style="{StaticResource PrimaryButton}" Click="AddEmployee_Click"/>

                    <Button Content="Edit Employee" Width="140" Height="40" Margin="10" 
                            Style="{StaticResource SecondaryButton}" Click="EditEmployee_Click"/>

                    <Button Content="Delete Employee" Width="140" Height="40" Margin="10"
                            Style="{StaticResource DangerButton}" Click="DeleteEmployee_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
