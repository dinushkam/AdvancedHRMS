<Window x:Class="AdvancedHRMS.Views.AdminProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Profile" Height="550" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel Margin="0,0,0,-133">
            <TextBlock Text="Admin Profile" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Full Name:"/>
            <TextBox x:Name="txtFullName"/>

            <Label Content="Email:"/>
            <TextBox x:Name="txtEmail" IsReadOnly="True"/>

            <Label Content="Phone:"/>
            <TextBox x:Name="txtPhone"/>

            <Label Content="Department:"/>
            <TextBox x:Name="txtDepartment"/>

            <Label Content="Role:"/>
            <TextBox x:Name="txtRole" IsReadOnly="True"/>

           

            <Button Content="Save Changes" Click="BtnSave_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
