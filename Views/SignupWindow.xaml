<Window x:Class="AdvancedHRMS.Views.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Account" 
        Height="711" 
        Width="450"
        Style="{StaticResource StandardWindow}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}" 
                Padding="15"
                CornerRadius="0">
            <TextBlock Text="Create New Account" 
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20">
            <StackPanel>
                <!-- Form Fields -->
                <TextBlock Text="Full Name:" 
                           Style="{StaticResource FormLabel}"/>
                <TextBox Name="txtFullName" 
                         Style="{StaticResource FormTextBox}"/>

                <TextBlock Text="Username:" 
                           Style="{StaticResource FormLabel}"
                           Margin="0,10,0,0"/>
                <TextBox Name="txtUsername" 
                         Style="{StaticResource FormTextBox}"/>

                <TextBlock Text="Email:" 
                           Style="{StaticResource FormLabel}"
                           Margin="0,10,0,0"/>
                <TextBox Name="txtEmail" 
                         Style="{StaticResource FormTextBox}"/>

                <TextBlock Text="Phone:" 
                           Style="{StaticResource FormLabel}"
                           Margin="0,10,0,0"/>
                <TextBox Name="txtPhone" 
                         Style="{StaticResource FormTextBox}"/>

                <TextBlock Text="Address:" 
                           Style="{StaticResource FormLabel}"
                           Margin="0,10,0,0"/>
                <TextBox Name="txtAddress" 
                         Style="{StaticResource FormTextBox}"/>

                <TextBlock Text="Password:" 
                           Style="{StaticResource FormLabel}"
                           Margin="0,10,0,0"/>
                <PasswordBox Name="txtPassword" 
                             Style="{StaticResource FormPasswordBox}"/>

                <TextBlock Text="Confirm Password:" 
                           Style="{StaticResource FormLabel}"
                           Margin="0,10,0,0"/>
                <PasswordBox Name="txtConfirmPassword" 
                             Style="{StaticResource FormPasswordBox}"/>

                <TextBlock Text="Role:" 
                           Style="{StaticResource FormLabel}"
                           Margin="0,10,0,0"/>
                <ComboBox Name="cmbRole" 
                          Style="{StaticResource FormComboBox}">
                    <ComboBoxItem Content="Employee" IsSelected="True"/>
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Manager"/>
                </ComboBox>

                <!-- Signup Button -->
                <Button Content="Create Account" 
                        Style="{StaticResource PrimaryButton}"
                        Height="45"
                        FontSize="16"
                        Margin="0,20,0,10"
                        Click="BtnSignup_Click"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{StaticResource DarkBrush}" 
                Padding="10"
                CornerRadius="0">
            <TextBlock Text="© 2025 Advanced HRMS | Account Registration"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>